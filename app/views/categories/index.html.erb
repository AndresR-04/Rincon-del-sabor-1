<div class="container">
  <h1>Categorias de Productos</h1>
  <div>
    <%= link_to new_category_path, {class: "btn btn-info shadow"} do %>
    <%= fa_icon "plus-circle" %>
       nueva categoria
    <% end %>
  </div>
  <br>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <p id="notice"><%= notice %></p>
        <table id="tablaCategories" class="table table-bordered table-hover">
         <thead>
           <tr>
             <th>Nombre</th>
             <th>Descripcion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @categories.each do |category| %>
             <tr>
               <td><%= category.categoria %></td>
               <td><%= category.descripcion %></td>

               <td align="center"><%= link_to 'Editar', edit_category_path(category), class:"btn btn-info btn-xs"%></td>
               <td align="center"><%= link_to 'Borrar', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs" %></td>
               <td align="center"><%= link_to 'productos', category_products_path(category), class:"btn btn-success" %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
      </div>
    </div>
  </div>
</div>
