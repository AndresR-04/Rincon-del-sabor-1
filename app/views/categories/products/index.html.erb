<!-- .container.p-4>.row>.col-md-12.mx-auto>.card.shadow>.card-body -->
<div class="container-fluid p-4">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <h1>Productos</h1>
      <%= link_to new_category_product_path(@category,@product), class: "btn btn-info btn-sm mb-3" do %>
          <%= fa_icon "plus-circle" %>
          Nuevo producto
      <% end %>
      <div class="card shadow">
        <div class="card-body">
          <div class="table-responsive">
            <p id="notice"><%= notice %></p>
            <table id="tablaCategories" class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>Nombre</th>
              <th>Cantidad</th>
              <th>Precio</th>
              <th>Descripcion</th>
              <th>Categoria</th>
              <th>Descripcion</th>
              <th colspan="3"> opciones</th>
            </tr>
          </thead>
             <tbody>
             <% @products.each do |product| %>
                 <tr>
                  <td><%= product.producto %></td>
                  <td><%= product.cantidad %></td>
                  <td><%= product.precio %></td>
                  <td><%= product.descripcion %></td>
                  <td><%= product.category.categoria %></td>
                  <td><%= product.category.descripcion %></td>
                  <td align="center">
                    <%= link_to  edit_category_product_path(@category, product), class: "btn btn-info btn-sm" do %>
                      Editar
                    <% end %>
                    <%= link_to category_product_path(@category, product), class: "btn btn-danger btn-sm" , method: :delete, data: {confirm: "desea borrar el producto #{product.producto}"} do %>
                      Borrar
                    <% end %>
                  </td>
                 </tr>
               <% end %>
             </tbody>
           </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
